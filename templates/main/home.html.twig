{% extends 'base.html.twig' %}

{% block title %}Accueil - Sortons casqués{% endblock title %}
{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css"
          rel="stylesheet"/>
{% endblock stylesheets %}
{% block javascripts %}
        {#{{ insertion du fichier js }}#}
        <script src="{{ asset('js/datepicker.js') }}"></script>
{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Accueil</h1>
    <div class="row">
        <div class="col-md-push-6">
            <span class="pull-right">
                <h5>Date du jour : {{ "now"|date("d/m/Y") }}</h5>
                <h5>Participant : {{ app.user.pseudo }}</h5>
            </span>
        </div>
    </div>
    <div>

        <!-- affichage des messages d'erreur et de confirmation -->
        {% for group, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ group }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <h3>Filtrer les sorties</h3>
        <div id="search">
            {{ form_start(searchForm, { 'attr': {'class': 'form'} }) }}
            <div class="row justify-content-between custom-line">

                <div class="col-4">
                    <p>{{ form_row(searchForm.campus) }}</p>
                    <p>{{ form_row(searchForm.motclef) }}</p>
                    <p>{{ form_row(searchForm.dateDebut) }} {{ form_row(searchForm.dateFin) }}</p>
                </div>
                <div class="col-4">
                    <p>{{ form_row(searchForm.organisateur) }}</p>
                    <p>{{ form_row(searchForm.inscrit) }}</p>
                    <p>{{ form_row(searchForm.pasInscrit) }}</p>
                    <p>{{ form_row(searchForm.passees) }}</p>
                </div>
                <div class="col-4"><p>{{ form_widget(searchForm.submit) }}</p></div>
            </div>
                {{ form_end(searchForm) }}
            </div>
        </div>
        <div>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Nom de la sortie</th>
                    <th scope="col">Date de la sortie</th>
                    <th scope="col">Clôture</th>
                    <th scope="col">inscrits/places</th>
                    <th scope="col">Etat</th>
                    <th scope="col">Inscrit</th>
                    <th scope="col">Organisateur</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for sortie in sorties %}
                    {# Récupérer les différentes variables afin de faire des filtres en conséquence #}
                    {% set dateDebut = sortie.dateHeureDebut|date('Y-m-d') %}
                    {% set dateDifference = "now"|date('Y-m-d') %}
                    {% set dateEcart = date(dateDifference).diff(date(dateDebut)) %}
                    {% if dateEcart.days <= 30 %}
                    {% else %}
                    <tr>
                        <th scope="row">{{ sortie.nom }}</th>
                        <td>{{ sortie.nom|capitalize }}</td>
                        <td>{{ sortie.dateHeureDebut|date('d/m/Y H:m:s') }}</td>
                        <td>{{ sortie.dateLimiteInscription|date('d/m/Y') }}</td>
                        <td>{{ sortie.etat.libelle }}</td>
                        <td>X</td>
                        <td>{{ sortie.organisateur.pseudo }}</td>
                        <td>
                            {# Afficher #}
                            {% if sortie.etat.id == 2
                                or sortie.etat.id == 3
                                or sortie.etat.id == 4
                                or sortie.etat.id == 5
                                or sortie.etat.id == 6 %}
{#                                <a href="{{ url('index', {'id': sortie.id}) }}" title="Afficher une sortie">Afficher</a>#}
                                Afficher
                            {% endif %}
                            {# Modifier #}
                            {% if app.user == sortie.organisateur and sortie.etat.id == 1 or sortie.etat.id == 2 %}
                                <a href="{{ url('sortie_modifier', { 'id': sortie.id }) }}"
                                   title="Modifier la sortie">Modifier</a>

                            {% endif %}
                            {# Publier #}
                            {%  if app.user == sortie.organisateur and sortie.etat.id == 1 or sortie.etat.id == 2 %}
                                <a href="{{ url('sortie_publier', { 'id': sortie.id }) }}"
                                   title="Publier la sortie">Publier</a>
                            {% endif %}
                            {# Annuler #}
                            {% if app.user == sortie.organisateur and (sortie.etat.id == 2 or sortie.etat.id == 1) %}
{#                                <a href="{{ url('sortie_annuler', { 'id': sortie.id }) }}"#}
{#                                   title="Annuler la sortie">Annuler</a>#}
                                Annuler
                            {% endif %}
                            {# Se désister #}
                            {% if app.user != sortie.organisateur and (sortie.etat.id == 2 or sortie.etat.id == 4) %}
{#                                <a href="{{ url('sortie_désister', { 'id': sortie.id }) }}"#}
{#                                   title="Se désinscrire de la sortie">Se désister</a>#}
                                Se désinscrire
                            {% endif %}
                        </td>
                    </tr>
                        {% endif %}
                {% else %}
                    <tr class="text-center">
                        <th class="text-center text-muted" scope="row" colspan="8">Aucune événement trouvé...</th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('sortie_create') }}"><button name='create' type='submit' value='create' class='btn btn-primary'>Créer une sortie</button></a>
        </div>
    </div>
</div>
{% endblock body %}
