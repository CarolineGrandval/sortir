{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock title%}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Accueil</h1>
    <h3>Date du jour : {{ "now"|date("d/m/Y") }}</h3>
    <h3>Participant : </h3>
    <div>
        <h3>Filtrer les sorties</h3>
        <div>
            <select class="form-control" id="campus">
                {%  for camp in campus %}
                    {% set selected = '' %}
{#                    {% if (camp.nom ~ ' ' ~ oneSupervisor.lname) == user.supervisor %}#}
{#                        {% set selected = 'selected' %}#}
{#                    {% endif %}#}
                    <option value="{{ camp.nom }}" {{ selected }}>{{camp.nom}}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Cl√¥ture</th>
                <th scope="col">inscrits/places</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscrit</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                <tr>
                    <th scope="row">{{ sortie.nom }}</th>
                    <td><a href="{{ url('wish_detail', {"id": wish.id }) }}">{{ wish.title|capitalize }}</a></td>
                    <td>{{ sortie.dateHeureDebut|date('d/m/Y H:m:s') }}</td>
                    <td>{{ sortie.dateLimiteInscription|date('d/m/Y') }}</td>
                    <td>{{ sortie.etat }}</td>
                    <td></td>
                    <td>{{ sortie.organisateur }}</td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock body %}
