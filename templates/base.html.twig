<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sortir !{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/logo.png') }}">
        <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
        <link rel="icon" href="{{ asset('img/favicon.png') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script type="application/javascript" src="{{ asset('js/jquery-3.6.0.min.js') }}"></script>

        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>

    <header>

        <nav>
            <ul>
                <!-- mettre à jour les liens !! -->
                <a class="site-title" href="{{ url('app_register') }}" title="Sortir | Home">
                    <img src="{{ asset('img/logo.png') }}" alt="Bucket-List">
                </a>
                <li><a href="{{ url('app_register') }}" title="Sortir | Home">Accueil</a></li>

                {% if not app.user %}
                    <li><a href="{{ url('app_register') }}" title="Login">Se connecter</a></li>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ url('app_register') }}" title="Register">Inscription </a></li>
                    <li><a href="{{ url('app_register') }}" title="Campus">Campus</a></li>
                    <li><a href="{{ url('app_register') }}" title="Villes">Villes</a></li>
                {% endif %}

                {% if app.user %}
                    <li><a href="{{ url('app_register') }}" title="Mon profil">Mon Profil</a></li>
                    <li><a href="{{ url('app_register') }}" title="Logout">Logout</a></li>
                {% endif %}
            </ul>
        </nav>

    </header>

    <main>
        {% block body %}
            {# for message in app.flashes('success') #}
            {% for group, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ group }}" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock body %}
    </main>

    <footer>
        © {{ "now"|date("Y") }} Anne-Laure Jouhanneau - Caroline Grandval - Driss Hananne
    </footer>


    </body>
</html>
