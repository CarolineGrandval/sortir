<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sortir !{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/logo.png') }}">
        <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
        <link rel="icon" href="{{ asset('img/favicon.png') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        <script type="application/javascript" src="{{ asset('js/jquery-3.6.0.min.js') }}"></script>

        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>

    <header>

        <!-- NAVBAR - mettre à jour les liens !! -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">

                <div class="d-flex">
                <a class="navbar-brand" href="{{ url('main_home') }}">
                    <img class="me-md-5" src="{{ asset('img/logo.png') }}" alt="Logo Sortir" width="145em"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                    <div class="collapse navbar-collapse " id="navbarColor01">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ url('main_home') }}" title="Home">Accueil
                                    <span class="visually-hidden">Accueil</span>
                                </a>
                            </li>

                            {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ url('edit_profile', {"id": app.user.id }) }}" title="Mon profil">Mon Profil
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link active" href="{{ url('app_logout') }}" title="Déconnexion">Se déconnecter
                                    <span class="visually-hidden">Se connecter</span>
                                </a>
                            </li>
                            {% endif %}

                        {% if not app.user %}
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ url('app_login') }}" title="Connexion">Se connecter</a>
                            </li>
                        {% endif %}

                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item"><a class="nav-link active" href="{{ url('main_home') }}" title="Campus">Campus</a></li>
                            <li class="nav-item"><a class="nav-link active" href="{{ url('main_home') }}" title="Villes">Villes</a></li>
                            <li class="nav-item"><a class="nav-link active" href="{{ url('app_register') }}" title="Register">Inscription </a></li>
                        {% endif %}

                        </ul>
                    </div>
            </div>
        </nav>

    </header>

    <main>
        <div class="container">

        {% block body %}
            {# for message in app.flashes('success') #}
            {% for group, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ group }}" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock body %}
        </div>
    </main>

    <footer>
        © {{ "now"|date("Y") }} Anne-Laure Jouhanneau - Caroline Grandval - Driss Hananne
    </footer>


    </body>
</html>
