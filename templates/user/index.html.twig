{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des utilisateurs inscrits</h1>

    {% if is_granted('ROLE_ADMIN') %}
    <table class ="table table-bordered table-striped mt-4">
        <thead>
        <tr >
            <td>Pseudo</td>
            <td>Nom</td>
            <td>Actions</td>
        </tr>
        </thead>

        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.prenom }} {{ user.nom }}</td>
                <td><a href="{{ url('user_delete', { 'id': user.id }) }}" title="Supprimer un utilisateur">Supprimer</a></td>
                <td><a href="{{ url('user_desactiver', { 'id': user.id }) }}" title="Désactiver un utilisateur">
                     <span class="statut"> {% if user.actif %} Désactiver {% else %} Activer {% endif %}</span>
                    </a></td>

            </tr>
        </tbody>
        {% endfor %}
    </table>
    {% endif %}
</div>

    <div class="mb-3 d-flex justify-content-center">
        <a class="navbar-brand" href="{{ url('sortie_home') }}"><button value='annuler' class='btn btn-secondary'>Retour accueil</button></a>
    </div>

{% endblock %}
